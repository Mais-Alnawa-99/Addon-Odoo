<odoo>
    <template id="show" name="Show Properties">
        <t t-call="website.layout">
            <t t-set="title">Create Property</t>
            <div class="oe_structure">
                <div class="container">
                    <h2 class="section-title">Property Creation</h2>
                    <p class="section-description">Fill out the form below to add a new property.</p>
                    <form action="/academy/academy/" method="post">
                        <div class="form-group">
                            <label for="name_property">Property Name:</label>
                            <input type="text" name="name_property" id="name_property" class="form-control" required="1"/>
                        </div>
                        <div class="form-group">
                            <label for="phone_customer">Phone Customer:</label>
                            <input type="text" name="phone_customer" id="phone_customer" class="form-control" required="1"/>
                        </div>
                        <button type="submit" class="btn btn-primary">Create Property</button>
                    </form>
                </div>

                <div class="card-container">
                    <div class="card">
                        <h3>Sample Property</h3>
                        <p>Customer Phone: 123-456-7890</p>
                        <button class="btn-card-action">View</button>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
